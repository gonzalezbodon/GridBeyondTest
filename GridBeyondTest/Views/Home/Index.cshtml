@model IEnumerable<GridBeyondTest.Models.MarketRegisterModel>

@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    

    

    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div id="alertInformation" class="alert alert-primary" role="alert" style="text-align: left;">
                    <svg style="margin-right:0.5rem;" width="2em" height="1em" viewBox="0 0 16 16" class="bi bi-info-circle-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412l-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM8 5.5a1 1 0 1 0 0-2 1 1 0 0 0 0 2z" />
                    </svg>
                    <b>Information: </b><span id="alertInformationText">Welcome to GridBeyond Test</span>
                </div>
            </div>
            <div class="col-lg-4">
                <button id="btnLoadData" type="button" class="btn btn-primary">Load Data</button>
                <button id="btnClearData" type="button" class="btn btn-danger">Clear Data</button>

                <div id="loaderDataManagement" class="spinner-border" role="status" style="display: none">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <table class="table" style="margin-top: 1rem">
                    <thead>
                        <tr>
                            <th>
                                <a asp-action="Index" asp-route-page="1" asp-route-order="@ViewData["orderDate"]" asp-route-direction="@ViewData["orderDirectionDate"]">@Html.DisplayNameFor(model => model.RegistrationDate)</a>
                            </th>
                            <th>
                                <a asp-action="Index" asp-route-page="1" asp-route-order="@ViewData["orderPrice"]" asp-route-direction="@ViewData["orderDirectionPrice"]">@Html.DisplayNameFor(model => model.Price)</a>
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RegistrationDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <a style="float:left" id="btnPrevious" asp-action="Index" asp-route-page="@ViewData["prevPage"]" asp-route-order="@ViewData["order"]" type="button" class="btn btn-secondary">Previous</a>
                <a style="float:right" id="btnNext" asp-action="Index" asp-route-page="@ViewData["nextPage"]" asp-route-order="@ViewData["order"]" type="button" class="btn btn-secondary">Next</a>

            </div>
            <div class="col-lg-4">
                <div class="col-sm">
                    <h5 style="margin-top: 2rem;"><b>Total Items: </b></h5>
                    <h5 id="statisticsTotalItems">-</h5>
                </div>
                <div class="col-sm">
                    <h5 style="margin-top: 2rem;"><b>Minimum: </b></h5>
                    <h5 id="statisticsTextMinimum">-</h5>
                </div>
                <div class="col-sm">
                    <h5 style="margin-top: 2rem;"><b>Maximum: </b></h5>
                    <h5 id="statisticsTextMaximum">-</h5>
                </div>
                <div class="col-sm">
                    <h5 style="margin-top: 2rem;"><b>Average: </b></h5>
                    <h5 id="statisticsTextAverage">-</h5>
                </div>
                <div class="col-sm">
                    <h5 style="margin-top: 2rem;"><b>Most Expensive Hour: </b></h5>
                    <h5 id="statisticsExpensiveHour">-</h5>
                    <h5 id="statisticsExpensiveHourEnd">-</h5>
                    <h5 id="statisticsExpensivePrice">-</h5>
                </div>
            </div>

        </div>

    </div>
</div>
